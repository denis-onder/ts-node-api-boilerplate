{
  "name": "ts-node-boilerplate",
  "version": "1.0.0",
  "description": "Node API boilerplate built with TypeScript, Express and Postgres",
  "main": "dist/bin/start.js",
  "scripts": {
    "scss": "node-sass public/scss -o public/css",
    "scss:watch": "node-sass --watch public/scss -o public/css",
    "compile": "tsc",
    "start": "npm run scss && npm run compile && node .",
    "dev": "npm run scss && ts-node-dev src/bin/start.ts",
    "test": "npm run compile && mocha dist/tests/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/denis-onder/ts-node-api-boilerplate.git"
  },
  "keywords": [
    "Node",
    "Express",
    "TypeScript",
    "Postgres"
  ],
  "author": "Denis Onder",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/denis-onder/ts-node-api-boilerplate/issues"
  },
  "homepage": "https://github.com/denis-onder/ts-node-api-boilerplate#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "helmet": "^3.21.2",
    "mongoose": "^5.8.2",
    "morgan": "^1.9.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^7.15.1",
    "pg-hstore": "^2.3.3",
    "showdown": "^1.9.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/chai": "^4.2.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-handlebars": "^3.1.0",
    "@types/helmet": "0.0.45",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.34",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.21",
    "@types/passport": "^1.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/showdown": "^1.9.3",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "node-sass": "^4.13.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.20.1",
    "typescript": "^3.7.4"
  }
}
